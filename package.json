{
  "name": "mei-ui",
  "version": "1.0.0",
  "description": "react mei-ui",
  "author": "MartinHan",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm run build:modern",
    "build:modern": "rollup -c ./rollup/rollup.config.js",
    "lint": "tslint '**/*.{ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "lint:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.3.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rollup": "^2.22.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "sass": "^1.26.10",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "clsx": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:types && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint:fix"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ]
  }
}
